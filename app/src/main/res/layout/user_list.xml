<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_marginBottom="@dimen/list.user.margin"
    card_view:cardCornerRadius="@dimen/list.user.corner"
    card_view:cardBackgroundColor="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list.user.relative_height"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/list.user.image_width"
            android:layout_height="@dimen/list.user.image_height"
            android:src="@drawable/ic_contacts_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/list.user.margin"
            android:layout_marginBottom="@dimen/list.user.margin" />

        <TextView
            android:id="@+id/full_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list.user.text"
            android:layout_marginLeft="@dimen/list.user.margin_left"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/list.user.margin"
            android:layout_marginBottom="@dimen/list.user.margin" />

    </RelativeLayout>
</android.support.v7.widget.CardView>